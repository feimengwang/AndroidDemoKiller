<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="demo"
            type="com.max.tang.demokiller.model.DemoEntity"/>
        <variable
            name="listener"
            type="com.max.tang.demokiller.model.RecycleViewDemoListener"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_conver_white_bg"
            android:gravity="center"
            android:padding="20dp"
            android:text="@{demo.description}"
            android:onClick="@{listener.demoClicked}"
            android:textSize="20sp"/>

    </LinearLayout>
</layout>
